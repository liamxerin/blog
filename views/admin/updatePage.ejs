         <% } %>
    <div class="form">
        <div class="form-container">
            <form class="blog-form" action="/admin/updateBlog/<%= blog._id %>?_method=PATCH" method="POST" enctype="multipart/form-data">
                <h2>Update Blog Post</h2>
                
                <!-- Hidden Method Override -->
                <input type="hidden" name="id" value="<%= blog.id %>">
                <input type="hidden" name="_method" value="PATCH">
    
                <!-- Blog Title -->
                <label for="title">Title</label>
                <input type="text" id="title" name="title" placeholder="Enter blog title" value="<%=blog.title %>" required>
    
                <!-- Author -->
                <label for="author">Author</label>
                <input type="text" id="author" name="author" placeholder="Enter author name" value="<%= blog.author %>" required>
    
                <!-- Categories -->
                <div class="category-selector">
                    <label for="categories">Category</label>
                    <select id="categories" name="categories" required>
                        <option value="">--Select a Category--</option>
<option value="nutrition" <%= blog.categories == 'nutrition' ? 'selected' : '' %> >Nutrition</option>
<option value="fitness" <%= blog.categories == 'fitness' ? 'selected' : '' %> >Fitness</option>
<option value="mental-health" <%= blog.categories == 'mental-health' ? 'selected' : '' %> >Mental Health</option>
<option value="wellness" <%= blog.categories == 'wellness' ? 'selected' : '' %> >Wellness</option>
<option value="chronic-conditions" <%= blog.categories == 'chronic-conditions' ? 'selected' : '' %> >Chronic Conditions</option>
<option value="lifestyle" <%= blog.categories == 'lifestyle' ? 'selected' : '' %> >Lifestyle</option>
<option value="health-news" <%= blog.categories == 'health-news' ? 'selected' : '' %> >Health News</option>
<option value="personal-stories" <%= blog.categories == 'personal-stories' ? 'selected' : '' %> >Personal Stories</option>
<option value="expert-advice" <%= blog.categories == 'expert-advice' ? 'selected' : '' %> >Expert Advice</option>
<option value="product-reviews" <%= blog.categories == 'product-reviews' ? 'selected' : '' %> >Product Reviews</option>

                    </select>
                </div>
    
                <!-- Image Upload -->
                <label for="image-upload" class="image-upload-container">
                    <span class="upload-icon">+</span>
                    <input type="file"  id="image-upload" name="image" accept="image/*">
                    <small>Current Image: <%= blog.image %></small>
                </label>
    
                <!-- Description -->
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="3" placeholder="Enter a brief description"><%= blog.description %></textarea>
    
                <!-- Content -->
                <label for="content">Content</label>
                <textarea id="content" name="content" rows="5" placeholder="Enter the main content"><%= blog.content %></textarea>
    
                <!-- Tags -->
                <label for="tags">Tags</label>
                <input type="text" id="tags" name="tags" placeholder="Enter tags separated by commas" value="<%= blog.tags %>">
                <!--Status-->
                <div class="status-selector">
                    <label for="status">Status</label>
                    <select name="status" id="status">
                        <option value="">--Select status</option>
                        <option value="published" <%= blog.status == 'published' ? 'selected' : '' %>>Published</option>
                        <option value="draft"<%= blog.status == 'draft' ? 'selected' : '' %>>Draft</option>
                    </select>
                </div>
                <!-- Post Type -->
                <div class="category-selector">
                    <label for="postType">Post Type</label>
                    <select id="postType" name="postType" required>
                        <option value="">--Select a Post Type--</option>
                        <option value="main" <%= blog.postType == 'main' ? 'selected' : '' %>>Main</option>
                        <option value="feature" <%= blog.postType == 'feature' ? 'selected' : ''%>>Feature</option>
                        <option value="normal" <%=blog.postType == 'normal' ? 'selected' : ''%>>Normal</option>
                    </select>
                </div>
    
                <!-- Submit Buttons -->
                <div class="post-button">
                   
                    <button class="submit-button" type="submit" >Update</button>
                </div>
            </form>
        </div>
    </div>
    
  </main>

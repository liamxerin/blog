        .message-box {
            background-color: #fff;
            padding: 20px;
            margin-right: 30px;
            margin-bottom: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }
        .message-box:hover {
            transform: translateY(-5px);
        }
        .message-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
            margin-bottom: 10px;
        }
        .message-header h3 {
            margin: 0;
            font-size: 1.2rem;
            color: #0074b7;
        }
        .message-header span {
            font-size: 0.9rem;
            color: #888;
        }
        .message-body {
            font-size: 1rem;
            color: #555;
            line-height: 1.5;
        }
        .message-footer {
            text-align: right;
            margin-top: 15px;
        }
        .message-footer a {
            text-decoration: none;
            color: #0074b7;
            font-weight: bold;
        }
        .message-footer a:hover {
            text-decoration: underline;
        }
        .delete-button {

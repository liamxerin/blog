  .success-alert {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
    border-radius: 8px;
    padding: 15px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    font-family: Arial, sans-serif;
    font-size: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    animation: fadeIn 0.5s ease-in;
  }

  .success-alert p {
    margin: 0;
    padding-left: 10px;
  }

  .success-icon {
    font-size: 1.5rem;
    color: #28a745;
  }

  /* Fade-in effect */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }


    <main>
      <% if(message.length > 0) { %>
        <div class="success-alert">
          <span class="success-icon">✔️</span>
          <p><%= message %></p>
        </div>
         <% } %>
      <form action="/admin/deleteMessageCollection/messages" method="POST" onsubmit="return confirm('Are you sure you want to delete this collection? This action cannot be undone.');">
        <button type="submit" class="delete-button">Delete All Messages</button>
    </form>
    <div class="container">
        <h2>Messages <span>(<%= messageCount %>)</span></h2>
        
        <% messages.forEach(message => { %>
            <div class="message-box">
                <div class="message-header">
                    <h3><%= message.name %></h3>
                    <span><%= new Date(message.createdAt).toLocaleString() %></span>
                </div>
                <div class="message-body">
                    <p><%= message.message %></p>
                </div>
                <div class="message-footer">
                    <a href="mailto:<%= message.email %>"><%= message.email %></a>
                </div>
                <form action="/admin/deleteMessage/<%= message._id %>?_method=DELETE" method="POST" class="delete-form" onsubmit="return confirmDelete(event)">
                  <button type="submit" class="delete-button">
                    <i class="fa-solid fa-trash"></i> Delete
                  </button>
                </form>
            </div>
        <% }) %>
    </div>
</main>

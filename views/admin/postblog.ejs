                        <option value="mental-health">Mental Health</option>
                        <option value="wellness">Wellness</option>
                        <option value="chronic-conditions">Chronic Conditions</option>
                        <option value="lifestyle">Lifestyle</option>
                        <option value="health-news">Health News</option>
                        <option value="personal-stories">Personal Stories</option>
                        <option value="expert-advice">Expert Advice</option>
                        <option value="product-reviews">Product Reviews</option>
                    </select>
                </div>
    
                <label for="image-upload" class="image-upload-container">
                    <span class="upload-icon">+</span>
                    <input type="file" id="image-upload" name="image" accept="image/*" >
                </label>
    
                <label for="description">Description</label>
                <textarea id="description" name="description" class="clear-on-focus" rows="3">Here is some description</textarea>
                
                <label for="content">Content</label>
                <textarea id="content" name="content" rows="5" ></textarea>
    
                <label for="tags">Tags</label>
                <input type="text" id="tags" name="tags"  class="clear-on-focus"placeholder="Enter tags separated by commas">
    
                <div class="category-selector">
                    <label for="postType">Select a post type:</label>
                    <select id="postType" name="postType" class="clear-on-focus" >
                        <option value="">--Select a type--</option>
                        <option value="main">Main</option>
                        <option value="feature">Feature</option>
                        <option value="normal" selected>Normal</option>
                    </select>
                </div>
    
                <div class="post-button">
                  <button class="submit-button" type="submit" name="action" value="publish" onclick="setPublishing(true)">Publish</button>
                  <button type="submit" class="submit-button" name="action" value="draft" onclick="setPublishing(false)">Save as Draft</button>
                </div>
            </form>
        </div>

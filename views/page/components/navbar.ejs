  <script>
    function showSidebar(){
      const sidebar = document.querySelector('.sidebar');
      sidebar.style.display = 'flex';  // Show the sidebar
    }
    function hideSidebar(){
      const sidebar = document.querySelector('.sidebar');
      sidebar.style.display = 'none';  // Hide the sidebar
    }
  </script>
